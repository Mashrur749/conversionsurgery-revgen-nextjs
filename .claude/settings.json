{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/protect-sensitive-files.sh\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/protect-env-bash.sh\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/post-compaction-reminder.sh\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(git checkout . *)",
      "Bash(git clean *)",
      "Bash(git branch -D *)",
      "Bash(npm run db:push)",
      "Bash(npm run db:push *)",
      "Bash(npm run db:migrate)",
      "Bash(npm run db:migrate *)"
    ],
    "allow": [
      "Bash(npm run build *)",
      "Bash(npm run lint *)",
      "Bash(npm run dev *)",
      "Bash(npm run db:generate *)",
      "Bash(npm run db:studio *)",
      "Bash(npx shadcn@latest *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git worktree *)"
    ]
  }
}
